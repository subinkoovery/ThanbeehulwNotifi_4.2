<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/event_background"
    tools:context="subu.dreamseed.thanbeehul.mainHome"
    android:id="@+id/Main">


    <RelativeLayout
        android:background="@color/event_main"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Thanbeehul Islam"
            android:id="@+id/fragEvent_Name"
            android:textColor="#ffa2b44a"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:id="@+id/action"
            android:layout_alignParentRight="true"
            android:clickable="true" />
    </RelativeLayout>
    <RelativeLayout


        android:background="@color/event_main"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sponsor Name"
            android:id="@+id/sponsor"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="sponsor brand"
            android:id="@+id/textView2"
            android:layout_below="@+id/sponsor"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Address line 1,Address line 1,Address line 1"
            android:id="@+id/addres"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Web/Phone :"
            android:id="@+id/textView3"
            android:layout_below="@+id/addres"
            android:layout_alignLeft="@+id/sponsor"
            android:layout_alignStart="@+id/sponsor"
            />



    </RelativeLayout>
<LinearLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@id/relativeLayout2"
    android:layout_below="@id/relativeLayout"
    android:id="@+id/fragArealist"
    android:orientation="vertical"

    >

</LinearLayout>


</RelativeLayout>
